 <div class="form-container">
  <%= form_for @listing do |form|%>
    <div class="form-group col-sm-10">
        <%= form.label :title %>
        <%= form.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group col-sm-10">
       <%= form.label :message %>
       <%= form.text_field :message, class: "form-control"%>
    </div>
    <div class="form-group col-sm-10">
        <%= form.label :photo %>
        <%= form.text_field :photo, class: "form-control"%>
    </div>
    <div class="form-group col-sm-10">
       <%= form.label :city %>
       <%= form.text_field :city, class: "form-control"%>
    </div>
    <div class="form-group col-sm-10">
       <%= form.label :price %>
       <%= form.text_field :price, class: "form-control"%>
    </div>
    <div class="form-group col-sm-10">
        <%= form.submit class: "btn btn-primary" %>
    </div>
  <% end %>
  <% if @listing.id %>
    <div class="form-group col-sm-10">
        <%= button_to "delete", @listings, :method => :delete, class: "btn btn-warning" %>
   </div>
  <% end %>
</div>

